{
  "name": "currency-converter",
  "version": "1.0.0",
  "description": "HTTP service for currency conversion",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run build:ts && npm run lint",
    "build:ts": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "serve": "node dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" \"npm:watch:*\"",
    "watch:node": "nodemon -w dist dist/index.js",
    "watch:ts": "tsc -w",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "author": "Alessandro Cifani",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "date-fns": "^1.29.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "morgan": "^1.9.1",
    "winston": "^3.1.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.11.6",
    "@types/supertest": "^2.0.6",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.3",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.2"
  }
}
