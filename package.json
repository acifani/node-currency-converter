{
  "name": "node-currency-converter",
  "version": "1.0.0",
  "description": "Node server for currency conversion",
  "author": {
    "name": "Alessandro Cifani",
    "email": "alessandro.cifani@gmail.com",
    "url": "https://github.com/acifani"
  },
  "repository": "github:acifani/node-currency-converter",
  "homepage": "https://github.com/acifani/node-currency-converter#readme",
  "bugs": {
    "url": "https://github.com/acifani/node-currency-converter/issues",
    "email": "alessandro.cifani@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "typescript",
    "docker",
    "currency",
    "converter"
  ],
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run build:ts && npm run lint",
    "build:ts": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "serve": "node dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" \"npm:watch:*\"",
    "watch:node": "nodemon -w dist dist/index.js",
    "watch:ts": "tsc -w",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "date-fns": "^1.30.1",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "morgan": "^1.9.1",
    "winston": "^3.1.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.9.5",
    "@types/supertest": "^2.0.6",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.3",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  }
}
